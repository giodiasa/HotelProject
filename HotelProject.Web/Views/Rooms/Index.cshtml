@model List<Room>
<div class="row">
    <a class="btn btn-success w-25 btn mb-3" asp-controller="Rooms" asp-action="Create">ახალი ნომრის დამატება</a>
</div>
<div class="row">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>სახელი</th>
                <th>სტატუსი</th>
                <th>სასტუმრო</th>
                <th>ფასი</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.Name</td>
                    <td>@(room.IsFree ? "თავისუფალი" : "დაკავებული")</td>
                    <td>@ViewBag.HotelNames[room.HotelId]</td>
                    <td>@room.DailyPrice ₾</td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Rooms" asp-action="Delete" asp-route-id="@room.Id">წაშლა</a>
                        <a class="btn btn-warning" asp-controller="Rooms" asp-action="Update" asp-route-id="@room.Id">განახლება</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
