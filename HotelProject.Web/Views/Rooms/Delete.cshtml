@model Room
@{
    ViewData["Title"] = "ნომრის წაშლა";
}
<h2 class="mb-4">ნომრის წაშლა</h2>
<form asp-controller="Rooms" asp-action="DeletePOST" method="post">
    <input hidden asp-for="Id" />
    <div class="mb-3">
        <input class="form-control" asp-for="Name" disabled />
    </div>
    <div class="mb-3">
        @Html.DropDownListFor(model => model.IsFree, new List<SelectListItem>()
        {
        new SelectListItem() { Text = "თავისუფალი", Value = "True" },
        new SelectListItem() { Text = "დაკავებული", Value = "False"}
        }, "-- არჩევა --", new { @id = "isFree", @class = "form-control", disabled = "disabled" })
    </div>
    <div class="mb-3">
        <input class="form-control" asp-for="HotelId" disabled />
    </div>
    <div class="mb-3">
        <input class="form-control" asp-for="DailyPrice" disabled />
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-danger" value="წაშლა" />
        <a class="btn btn-primary btn" asp-controller="Rooms" asp-action="Index">გაუქმება</a>
    </div>
</form>