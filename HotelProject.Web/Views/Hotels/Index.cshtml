@model List<Hotel>
<div class="row">
    <a class="btn btn-success w-25 btn mb-3" asp-controller="Hotels" asp-action="Create">ახალი სასტუმროს დამატება</a>
</div>
<div class="row">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>სახელი</th>
                <th>რეიტინგი</th>
                <th>ქვეყანა</th>
                <th>ქალაქი</th>
                <th>მისამართი</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hotel in Model)
            {
                <tr>
                    <td>@hotel.Name</td>
                    <td>@hotel.Rating</td>
                    <td>@hotel.Country</td>
                    <td>@hotel.City</td>
                    <td>@hotel.PhysicalAddress</td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Hotels" asp-action="Delete" asp-route-id="@hotel.Id">წაშლა</a>
                        <a class="btn btn-warning" asp-controller="Hotels" asp-action="Update" asp-route-id="@hotel.Id">განახლება</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>