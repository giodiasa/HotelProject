@model List<Hotel>
<div class="row">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>სახელი</th>
                <th>რეიტინგი</th>
                <th>ქვეყანა</th>
                <th>ქალაქი</th>
                <th>მისამართი</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hotel in Model)
            {
                <tr>
                    <td>@hotel.Name</td>
                    <td>@hotel.Rating</td>
                    <td>@hotel.Country</td>
                    <td>@hotel.City</td>
                    <td>@hotel.PhysicalAddress</td>
                </tr>
            }
        </tbody>
    </table>
</div>
