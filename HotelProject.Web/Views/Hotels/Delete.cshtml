@model Hotel
@{
    ViewData["Title"] = "სასტუმროს წაშლა";
}
<h2 class="mb-4">სასტუმროს წაშლა</h2>
<form asp-controller="Hotels" asp-action="DeletePOST" method="post">
    <input hidden asp-for="Id" />
    <div class="mb-3">
        <input class="form-control" asp-for="Name" disabled />
    </div>
    <div class="mb-3">
        <input class="form-control" asp-for="Rating" disabled />
    </div>
    <div class="mb-3">
        <input class="form-control" asp-for="Country" disabled />
    </div>
    <div class="mb-3">
        <input class="form-control" asp-for="City" disabled />
    </div>
    <div class="mb-3">
        <input class="form-control" asp-for="PhysicalAddress" disabled />
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-danger" value="წაშლა" />
        <a class="btn btn-primary btn" asp-controller="Hotels" asp-action="Index">გაუქმება</a>
    </div>
</form>