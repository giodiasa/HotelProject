@model List<Manager>
<div class="row">
    <a class="btn btn-success w-25 btn mb-3" asp-controller="Managers" asp-action="Create">ახალი მენეჯერის დამატება</a>
</div>
<div class="row">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>სახელი</th>
                <th>გვარი</th>
                <th>სასტუმრო</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var manager in Model)
            {
                <tr>
                    <td>@manager.FirstName</td>
                    <td>@manager.LastName</td>
                    <td>@ViewBag.HotelNames[manager.HotelId]</td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Managers" asp-action="Delete" asp-route-id="@manager.Id">წაშლა</a>
                        <a class="btn btn-warning" asp-controller="Managers" asp-action="Update" asp-route-id="@manager.Id">განახლება</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
