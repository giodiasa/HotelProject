@model GuestReservation
<h2 class="mb-4">სტუმრის წაშლა</h2>
<form asp-controller="Guests" asp-action="DeletePOST" method="post">
    <input hidden asp-for="Id" />
    <input hidden asp-for="GuestId" />
    <input hidden asp-for="ReservationId" />
    <div class="mb-3">
        <label class="form-label">@Model.Guest.FirstName @Model.Guest.LastName</label>
    </div>
    <div class="mb-3">
        <label class="form-label">Check in/out: @Model.Reservation.CheckInDate - @Model.Reservation.CheckOutDate</label>
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-danger" value="წაშლა" />
        <a class="btn btn-primary btn" asp-controller="Guests" asp-action="Index">გაუქმება</a>
    </div>
</form>
