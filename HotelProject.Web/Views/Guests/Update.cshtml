@model GuestReservationForUpdatingDTO
@{
    ViewData["Title"] = "სტუმრის განახლება";
}
<h2 class="mb-4">სტუმრის განახლება</h2>
<form asp-controller="Guests" asp-action="Update" method="post">
    <input hidden asp-for="Id" />
    <input hidden asp-for="GuestId" />
    <input hidden asp-for="ReservationId" />
    <div class="mb-3">
        <label asp-for="FirstName">სახელი</label>
        <input class="form-control" asp-for="FirstName" />
        @Html.ValidationMessageFor(f => f.FirstName, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="LastName">გვარი</label>
        <input class="form-control" asp-for="LastName" />
        @Html.ValidationMessageFor(l => l.LastName, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="PersonalNumber">პირადი ნომერი</label>
        <input class="form-control" asp-for="PersonalNumber" />
        @Html.ValidationMessageFor(p => p.PersonalNumber, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber">ტელეფონის ნომერი</label>
        <input class="form-control" asp-for="PhoneNumber" />
        @Html.ValidationMessageFor(p => p.PhoneNumber, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <div class="row">
            <div class="col">
                <label asp-for="CheckInDate">შემოსვლის თარიღი</label>
                <input class="form-control" asp-for="CheckInDate" />
                @Html.ValidationMessageFor(f => f.CheckInDate, "", new { @class = "text-danger" })
            </div>
            <div class="col">
                <label asp-for="CheckOutDate">გასვლის თარიღი</label>
                <input class="form-control" asp-for="CheckOutDate" />
                @Html.ValidationMessageFor(f => f.CheckOutDate, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-success" value="განახლება" />
        <a class="btn btn-primary btn" asp-controller="Guests" asp-action="Index">გაუქმება</a>
    </div>
</form>




